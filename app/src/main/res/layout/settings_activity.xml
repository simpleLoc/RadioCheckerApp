<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_selectMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_map_button_text" />

            </LinearLayout>

            <Button
                android:id="@+id/button_reset_seen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_seen_button_text" />

            <TextView
                android:id="@+id/textView_UWBAnchorMacAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UWB Anchor MAC Address" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>